<UserControl x:Class="TAlex.Testcheck.Tester.Controls.Testers.MatchingTester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Name="mainGrid" Margin="5" Background="Transparent"
          MouseLeftButtonDown="mainGrid_MouseLeftButtonDown"
          MouseRightButtonDown="mainGrid_MouseRightButtonDown"
          MouseMove="mainGrid_MouseMove"
          MouseLeftButtonUp="mainGrid_MouseLeftButtonUp"
          SizeChanged="mainGrid_SizeChanged">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Name="leftChoicesStackPanel" Grid.Column="0" />
        <StackPanel Name="rightChoicesStackPanel" Grid.Column="2" />
    </Grid>
</UserControl>
